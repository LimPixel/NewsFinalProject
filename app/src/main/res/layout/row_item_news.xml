<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_row_item"
            android:layout_width="72.74dp"
            android:layout_height="68dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="30dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"

            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_row_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_img_news" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/title_news_rows"
            android:layout_width="204dp"
            android:layout_height="46dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/cv_row_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_row_item" />

        <TextView
            android:id="@+id/author_row_item"
            android:layout_width="53dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@id/cv_row_item"
            app:layout_constraintStart_toStartOf="@id/title_news_rows"
            app:layout_constraintTop_toBottomOf="@id/title_news_rows" />

        <TextView
            android:id="@+id/txt_separate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="@string/txt_separate"
            app:layout_constraintBottom_toBottomOf="@id/author_row_item"
            app:layout_constraintStart_toEndOf="@id/author_row_item"
            app:layout_constraintTop_toTopOf="@id/author_row_item" />

        <TextView
            android:id="@+id/time_row_item"
            android:layout_width="57dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/txt_separate"
            app:layout_constraintStart_toEndOf="@id/txt_separate"
            app:layout_constraintTop_toTopOf="@id/txt_separate" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>